> buildSignature

# check if build signature file is written
$ absent target/build-signature-default
> buildSignatureStore
$ exists target/build-signature-default

# check if build signature file is only overwritten if signature actually changed
$ copy-file target/build-signature-default target/build-signature-default.bak
> buildSignatureStore
-$ newer target/build-signature-default target/build-signature-default.bak

# check if changes to the sources also change the signature
$ touch src/main/scala/New.scala
> buildSignatureStore
$ newer target/build-signature-default target/build-signature-default.bak
