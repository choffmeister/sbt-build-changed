> buildSignature

# check if build signature file is written
$ absent app/.build-default.sig
$ absent common/.build-default.sig
> buildSignatureStore
$ exists app/.build-default.sig
$ exists common/.build-default.sig

# check if changes to app (which depends on common) does not change signature of common
$ copy-file app/.build-default.sig app/.build-default.sig.bak
$ copy-file common/.build-default.sig common/.build-default.sig.bak
$ touch app/src/main/scala/New.scala
> buildSignatureStore
$ newer app/.build-default.sig app/.build-default.sig.bak
$ copy-file app/.build-default.sig app/.build-default.sig.bak
-$ newer app/.build-default.sig app/.build-default.sig.bak
-$ newer common/.build-default.sig common/.build-default.sig.bak

# check if changes to common (which is used by app) does also change signature of app
$ copy-file common/src-new/main/scala/Helper.scala common/src/main/scala/Helper.scala
> buildSignatureStore
$ newer app/.build-default.sig app/.build-default.sig.bak
$ newer common/.build-default.sig common/.build-default.sig.bak
